function is_file
{
test -f $1
}

function is_dir
{
test -d $1
}


function grab_state
{
eval $( cat $FSTATE /dev/null )
}


function show_state
{
if [[ -z $FSTATE ]]; then
    printc red no FSTATE file specified
    pause
    return
fi

if [[ ! -f $FSTATE ]]; then
    echo '[31m' `/bin/ls -ld $FSTATE` '[m'
    pause
    return
fi

cat $FSTATE
pause
return
}


function unsetxv
{
case $- in
    (*x*v*|*v*x*)
        set_xv=1
        set +xv
        ;;
    (*) set_xv=0 ;;
esac
}


function setxv
{
if [[ $set_xv -eq 1 ]]; then
    set -xv
fi
}


function resize
{
vecho lines
vecho columns
}


function cool_cat
{
# grabs random color-idx. considers environ light/dark setting.
local r g b idx _gg
DEF_IFS="${IFS}"
IFS='' # retains input spaces
while read line ; do
    incr cool_cat_idx
    if [[ $cool_cat_idx -ge $pound_cool_cat_fgs ]]; then
        cool_cat_idx=0
    fi
    idx=${cool_cat_fgs[cool_cat_idx]}

#     case ${_g:-38} in
#         48)
#             _gg=38
# #             (( r = RANDOM % 3 ))
# #             (( g = RANDOM % 3 ))
# #             (( b = RANDOM % 3 ))
#             ;;

#         38)
#             _gg=48
# #             (( r = ( RANDOM % 3 ) + 3 ))
# #             (( g = ( RANDOM % 3 ) + 3 ))
# #             (( b = ( RANDOM % 3 ) + 3 ))
#             ;;

#         *) echo "$line" ; continue ;;
#     esac

    # (( idx = 16 + b + (g*6) + (r*36) ))
    # echo "[m${idx} [${_gg};5;${idx}m${line}[m"
    echo "[${_g};5;${idx}m${line}[m"
    # echo "[${_g};5;${idx}m${line}[m"
done
echo -n '[m'
# return to default values
IFS="${DEF_IFS}"
return
}


function fig
{
_goop=$( echo "$*" | sed -e 's/[^A-Za-z][^A-Za-z]*/.*/g' )
find . -type f -exec grep -i "$_goop" {} \; -print
}


function goopy
{
_goop=$( echo "$*" | sed -e 's/[^A-Za-z][^A-Za-z]*/.*/g' )
grep -i "$_goop" *.py
}


