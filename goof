# files=$(                                                             #
#----------------------------------------------------------------------#
    gs
    print_sep
    gs |
        eg -i '(eg|grep) .*(modified:|deleted:|new.file:)' |
            sed -e 's/new.file/new.file/' \
                -e 's/both.modified/both.modified/' |
        fields 2
    print_sep
#----------------------------------------------------------------------#
#     )                                                                #
#----------------------------------------------------------------------#

